<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <com.github.library.bubbleView.BubbleTextView
        android:id="@+id/text_mess"
        android:padding="15dp"
        android:textColor="#333"
        android:layout_toRightOf="@+id/avatar_img"
        android:layout_marginLeft="7dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:arrowWidth="8dp"
        android:angle="8dp"
        android:arrowPosition="14dp"
        android:arrowLocation="right"
        android:arrowCenter="true"
        android:bubbleColor="@color/colorPrimaryDark"
        />
    <ImageView
        android:id="@+id/avatar_img"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar"
</RelativeLayout>